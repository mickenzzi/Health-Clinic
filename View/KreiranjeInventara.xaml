            <ComboBoxItem Content="Operacioni sto"></ComboBoxItem>
            <ComboBoxItem Content="Defibrilator"></ComboBoxItem>
            <ComboBoxItem Content="AparatZaAnesteziju"></ComboBoxItem>
            <ComboBoxItem Content="Sterilizator"></ComboBoxItem>
            <ComboBoxItem Content="MasinaZaEKG"></ComboBoxItem>
        </ComboBox>
        <Label Content="Tip Inventara" Margin="214,95,484.6,272"></Label>
        <Label Content="Kolicina" Margin="214,153,484.6,212"></Label>
        <Label Content="Broj Sobe" Margin="214,213,484.6,157"></Label>

        <Button x:Name="Potvrdi" Content="Potvrdi" Click="onClickPotvrdi" Margin="232,322,466.6,66"></Button>
        <Button x:Name="Odustani" Content="Odustani" Click="onClickOdustani" Margin="385,322,311.6,66"></Button>
    </Grid>
</Window>
