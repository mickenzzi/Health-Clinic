<Window x:Class="Bolnica.View.KreiranjeInventara" WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.View"
        mc:Ignorable="d"
        Title="KreiranjeInventara" Height="450" Width="800">
    <Grid>
        
        <TextBox x:Name="kolicina" Margin="343,153,311,231"></TextBox>
        <TextBox x:Name="brojSobe" Margin="343,203,311,181"></TextBox>
        <ComboBox Name="tipInventara" Margin="343,93,311.6,297">
